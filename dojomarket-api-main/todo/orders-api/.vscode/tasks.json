{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run start:dev",
            "command": "npm",
            "args": [
                "run",
                "start:dev"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    // I need to write any regex that will never match here, since we're not searching for errors during the task run
                    "regexp": "fooooooooooobaaaaaaaaaaaaarrrrrrr",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                // I need this to tell vs code that the task execution is over and allow it to open google chrome for debug
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".",
                    "endsPattern": "."
                }
            }
        },
